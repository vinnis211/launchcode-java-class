<?xml version="1.0" encoding="UTF-8"?>
<project name="module_launchcode-java-class" default="compile.module.launchcode-java-class">
  <dirname property="module.launchcode-java-class.basedir" file="${ant.file.module_launchcode-java-class}"/>
  
  <property name="module.jdk.home.launchcode-java-class" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.launchcode-java-class" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.launchcode-java-class" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.launchcode-java-class" value="-encoding windows-1252 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="launchcode-java-class.output.dir" value="${module.launchcode-java-class.basedir}/target/classes"/>
  <property name="launchcode-java-class.testoutput.dir" value="${module.launchcode-java-class.basedir}/target/test-classes"/>
  
  <path id="launchcode-java-class.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="launchcode-java-class.module.production.classpath">
    <path refid="${module.jdk.classpath.launchcode-java-class}"/>
  </path>
  
  <path id="launchcode-java-class.runtime.production.module.classpath">
    <pathelement location="${launchcode-java-class.output.dir}"/>
  </path>
  
  <path id="launchcode-java-class.module.classpath">
    <path refid="${module.jdk.classpath.launchcode-java-class}"/>
    <pathelement location="${launchcode-java-class.output.dir}"/>
  </path>
  
  <path id="launchcode-java-class.runtime.module.classpath">
    <pathelement location="${launchcode-java-class.testoutput.dir}"/>
    <pathelement location="${launchcode-java-class.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.launchcode-java-class">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.launchcode-java-class">
    <patternset refid="excluded.from.module.launchcode-java-class"/>
  </patternset>
  
  <path id="launchcode-java-class.module.sourcepath">
    <dirset dir="${module.launchcode-java-class.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="launchcode-java-class.module.test.sourcepath">
    <dirset dir="${module.launchcode-java-class.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.launchcode-java-class" depends="compile.module.launchcode-java-class.production,compile.module.launchcode-java-class.tests" description="Compile module launchcode-java-class"/>
  
  <target name="compile.module.launchcode-java-class.production" depends="register.custom.compilers" description="Compile module launchcode-java-class; production classes">
    <mkdir dir="${launchcode-java-class.output.dir}"/>
    <javac2 destdir="${launchcode-java-class.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.launchcode-java-class}/javac">
      <compilerarg line="${compiler.args.launchcode-java-class}"/>
      <bootclasspath refid="launchcode-java-class.module.bootclasspath"/>
      <classpath refid="launchcode-java-class.module.production.classpath"/>
      <src refid="launchcode-java-class.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.launchcode-java-class"/>
    </javac2>
    
    <copy todir="${launchcode-java-class.output.dir}">
      <fileset dir="${module.launchcode-java-class.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.launchcode-java-class.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.launchcode-java-class.tests" depends="register.custom.compilers,compile.module.launchcode-java-class.production" description="compile module launchcode-java-class; test classes" unless="skip.tests">
    <mkdir dir="${launchcode-java-class.testoutput.dir}"/>
    <javac2 destdir="${launchcode-java-class.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.launchcode-java-class}/javac">
      <compilerarg line="${compiler.args.launchcode-java-class}"/>
      <bootclasspath refid="launchcode-java-class.module.bootclasspath"/>
      <classpath refid="launchcode-java-class.module.classpath"/>
      <src refid="launchcode-java-class.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.launchcode-java-class"/>
    </javac2>
    
    <copy todir="${launchcode-java-class.testoutput.dir}">
      <fileset dir="${module.launchcode-java-class.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.launchcode-java-class" description="cleanup module">
    <delete dir="${launchcode-java-class.output.dir}"/>
    <delete dir="${launchcode-java-class.testoutput.dir}"/>
  </target>
</project>